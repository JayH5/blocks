<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="title_screen_title_style">
        <item name="android:textSize">@dimen/title_screen_title_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">32dp</item>
    </style>

    <style name="game_text">
        <item name="android:textSize">@dimen/game_text_size</item>
        <item name="android:textColor">@color/dots_grey_text</item>
    </style>

    <style name="game_counter">
        <item name="android:textSize">@dimen/game_counter_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="powerup">
        <item name="android:textSize">@dimen/powerup_text_size</item>
    </style>

</resources>
