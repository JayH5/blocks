<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.jay.blocks" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
        <activity
            android:name="za.jay.blocks.TitleScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="za.jay.blocks.GameActivity"
            android:label="@string/app_name"
            android:parentActivityName="za.jay.blocks.TitleScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="za.jay.blocks.TitleScreenActivity" />
        </activity>
    </application>

</manifest>
